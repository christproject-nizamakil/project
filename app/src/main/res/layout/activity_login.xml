<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/egister_background"
    tools:context=".login_registration_pack.LoginActivity">

    <Button
        android:textColor="@color/colorPrimary"
        android:background="@drawable/rounded_buttonblue"
        android:text="Log In"
        android:id="@+id/Login"
        android:layout_width="130dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="72dp"
        />
    <EditText
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:inputType="textPassword"
        android:textColor="@color/colorAccent"
        android:id="@+id/password"
        android:layout_above="@+id/forgot_password"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:textAlignment="center"
        android:hint="Password"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_button"
        />

    <TextView
        android:imeOptions="actionDone"
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Login"
        android:layout_alignEnd="@+id/password"
        android:layout_marginBottom="24dp"
        android:onClick="onClicked"
        android:text="Reset Password"
        android:textColor="@color/colorPrimary"

        />
    <EditText
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:id="@+id/email"
        android:textColor="@color/colorAccent"
        android:layout_marginBottom="8dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/password"
        android:textAlignment="center"
        android:hint="Email ID"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/rounded_button"
        />

    <TextView
        android:id="@+id/notyetreg"
        android:onClick="onClick"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not yet registered ? "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"

        />
</RelativeLayout>